<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">

  <external-component-plugins>
      <!-- Service de gestion des ensembles de ressources -->
    <target-component>org.exoplatform.services.resources.ResourceBundleService</target-component>
    <component-plugin>
        <!-- Nom du plugin -->
      <name>Vue Sample Portlet Resource Bundle</name>
        <!-- fonction pour ajouter le bundle de ressources -->
      <set-method>addResourceBundle</set-method>
        <!-- type du plugin -->
      <type>org.exoplatform.services.resources.impl.BaseResourceBundlePlugin</type>
      <init-params>
        <values-param>
          <name>init.resources</name>
          <description>Store the following resources into the db for the first launch</description>
            <value>locale.addon.Sample</value>
        </values-param>
          <!-- ce groupe de ressources sera ajoutÃ© aux groupes de ressources du portail (site)-->
        <values-param>
          <name>portal.resource.names</name>
            <!-- l'emplacement des ensembles de ressources sous le dossier des ressources -->
          <value>locale.addon.Sample</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
