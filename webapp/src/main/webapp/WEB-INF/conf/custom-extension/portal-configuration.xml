<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
  <external-component-plugins>
    <target-component>org.exoplatform.portal.config.UserPortalConfigService</target-component>
    <component-plugin>
      <name>new.portal.config.user.listener</name>
      <set-method>initListener</set-method>
      <type>org.exoplatform.portal.config.NewPortalConfigListener</type>
      <description>This listener creates a page for Vue sample application</description>
      <init-params>
          <!-- cette configuration permettra de modifier
          les pages actuelles du site et les liens de navigation -->
        <value-param>
          <name>override</name>
          <value>true</value>
        </value-param>
        <object-param>
          <name>portal.configuration</name>
          <description>description</description>
          <object type="org.exoplatform.portal.config.NewPortalConfig">
              <!-- Type de site : portail pour site, groupe pour espaces -->
            <field name="ownerType">
              <string>portal</string>
            </field>
              <!-- Cette configuration remplacera la configuration existante du site -->
            <field name="override">
              <boolean>true</boolean>
            </field>
              <!-- Cette configuration insérera de nouvelles
               pages/liens de navigation s'ils ne sont pas trouvés -->
            <field name="importMode">
              <string>insert</string>
            </field>
              <!-- Nom du site -->
            <field name="predefinedOwner">
              <collection type="java.util.HashSet">
                <value>
                  <string>dw</string>
                </value>
              </collection>
            </field>
              <!-- emplacement des pages/liens de navigation à importer -->
            <field name="location">
              <string>war:/conf/custom-extension/portal</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>