<?xml version="1.0" encoding="UTF-8"?>
<web-app
        version="3.0"
        metadata-complete="true"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- Le nom d'affichage doit être le nom du fichier WAR. Il sera utilisé comme nom d'application -->
	<display-name>demande-conge-extension-webapp</display-name>
    <absolute-ordering/>

    <!-- Cet écouteur Web est utilisé pour enregistrer la guerre actuelle dans la liste des fichiers d'extension déployés -->
	<listener>
		<listener-class>org.exoplatform.container.web.PortalContainerConfigOwner</listener-class>
	</listener>

    <!-- Ce filtre Web chargera les fichiers CSS/JS statiques conformément à la déclaration dans le fichier gatein-resources.xml -->
	<filter>
		<filter-name>ResourceRequestFilter</filter-name>
		<filter-class>org.exoplatform.portal.application.ResourceRequestFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>ResourceRequestFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
